<div>
	<div>
		<table>
			<thead>
				<tr>
					<h1>Books</h1>
					<th>title</th>
					<th>body</th>
					<th></th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book|%>
					<tr>
						<th><%= book.title%></th>
						<th><%= book.body%></th>
						<th><%=link_to "Show", book_path(book.id)%></th>
						<th><%=link_to "Edit", edit_book_path(book.id)%></th>
						<th><%=link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "are you sureï¼Ÿ" %></th>
					</tr>
				<%end%>
			</tbody>
		</table>
	</div>
	<div>
		<h3 class="headline">New book</h3>
		<% if @book.errors.any? %>
  <div class="alert alert-warning">
     <ul>error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

		<%= form_for(@book) do |f| %>


		<h4>title</h4>
		<%= f.text_field :title %>
		<h4>body</h4>
		<%= f.text_area :body %>
        <%= f.submit "Create Book" %>

        <%end%>
	</div>

</div>
